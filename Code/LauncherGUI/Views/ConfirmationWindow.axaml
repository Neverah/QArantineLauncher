<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="QArantineLauncher.Code.LauncherGUI.Views.ConfirmationWindow"
        Icon="/Assets/LauncherGUI/Icons/qarantine.ico"
        Title="ConfirmationWindow" Width="400" Height="150">

    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <TextBlock Name="MessageTextBlock" Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="10" Foreground="LightGray" />
        <Button Content="Confirm" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="100" Margin="10" Foreground="#3CB93C" Click="ConfirmButton_Click" />
        <Button Content="Cancel" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Width="100" Margin="10" Foreground="#DC4545" Click="CancelButton_Click" />
    </Grid>
</Window>